{
    "verbose": true,
    "testEnvironment": "node",
    "moduleFileExtensions": [
        "ts",
        "tsx",
        "js"
    ],
    "transform": {
        "^.+\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
        "**/**/*.tests.(ts|tsx)"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
        "rules/*Rule.ts"
    ]
}